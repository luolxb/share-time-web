/* pages/phonelogin/phonelogin.wxss */

.phonelogin {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(#937bf5, #fff);
}

.phoneinput {
  border: 1px solid #fff;
  width: 70%;
  margin: 20rpx 10rpx 50rpx 10rpx;
  padding: 10rpx;
}

.inputcode {
  display: flex;
  flex-direction: row;
  border: 1px solid #fff;
  width: 70%;
  margin: 0 10rpx 50rpx 10rpx;
  padding: 10rpx;
}

.codeinput {
  font-size: 16px;

}

.codebtn {
  background: linear-gradient(#937bf5, #fff);
}

.hanleBtn {
  width: 1000rpx;
  background: linear-gradient(#937bf5, #fff);
}
